Package: ClusteringVariables
Title: Variable Clustering Using Shiny and R6 Classes
Version: 0.0.0.9000
Authors@R: 
    c(
        person("Maissa", "Lajimi", email = "maissa.lajimi@univ-lyon2.fr", role = c("aut", "cre")),
